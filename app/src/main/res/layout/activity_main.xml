<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="399dp"
        android:layout_height="561dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/Paris"
                layout="@layout/time_layout" />

            <include
                android:id="@+id/London"
                layout="@layout/time_layout" />

            <include
                android:id="@+id/Sydney"
                layout="@layout/time_layout" />

            <include
                android:id="@+id/NewYork"
                layout="@layout/time_layout" />

            <include
                android:id="@+id/Amsterdam"
                layout="@layout/time_layout" />

            <include
                android:id="@+id/Dublin"
                layout="@layout/time_layout" />

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/Button12"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="onClick"
        android:text="@string/button12"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:text="12 Hour Time" />

    <Button
        android:id="@+id/Button24"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="onClick"
        android:text="@string/button24"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:text="24 Hour Time" />

</androidx.constraintlayout.widget.ConstraintLayout>